{#
/**
 * @file
 * Template for the frontend validation.
 *
 * Please note that if you need to change the structure, an element with the ID
 * of 'password-enhancements-policy-constraints' has to exist and it must
 * contain the elements with .constraint without changing their class, data-*
 * and ID attributes. Of course it is possible to add more classes as needed.
 *
 * Available variables:
 * - attributes (Drupal\Core\Template\Attribute): Renderable HTML attributes.
 * - constraints (array): Renderable constraints.
 * - title (string): The title for the section.
 * - title_attributes (Drupal\Core\Template\Attribute): Renderable HTML attributes.
 */
#}

{% if constraints %}
  <fieldset{{ attributes }}>
    <legend{{ title_attributes }}>{{ title }}</legend>
    {% for constraint in constraints %}
      {{ constraint }}
    {% endfor %}
  </fieldset>
{% endif %}
